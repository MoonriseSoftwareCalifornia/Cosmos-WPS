@using Cosmos.Cms.Services
@using Microsoft.Extensions.Options;
@using Cosmos.Cms.Common.Services.Configurations
@using Cosmos.Cms.Controllers

@inject IOptions<CosmosConfig> options
@model ArticleViewModel
@{
    Layout = "_LayoutPreview";
    ViewData["Title"] = Model.Title;
}

@Html.Raw(PageImportConstants.COSMOS_BODY_HEADER_START)
@Html.Raw(Model.Layout.HtmlHeader)
@Html.Raw(PageImportConstants.COSMOS_BODY_HEADER_END)

@Html.Raw(Model.Content)

@Html.Raw(PageImportConstants.COSMOS_BODY_FOOTER_START)
@Html.Raw(Model.Layout.FooterHtmlContent)
@Html.Raw(PageImportConstants.COSMOS_BODY_FOOTER_END)

@Html.Raw(Model.FooterJavaScript)

@if (ViewData["UseGoogleTranslate"] != null && (bool) ViewData["UseGoogleTranslate"])
{
@Html.Raw(PageImportConstants.COSMOS_GOOGLE_TRANSLATE_START)
<script src="@options.Value.EditorUrls.FirstOrDefault().Url/ccms/js/GoogleTranslations.js" id="ccms-lang-script" data-lang="@Model.LanguageName"></script>
@Html.Raw(PageImportConstants.COSMOS_GOOGLE_TRANSLATE_END)
}
